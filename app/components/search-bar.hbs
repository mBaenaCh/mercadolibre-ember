<nav class="navbar navbar-light bg-light">
    <div class="row">
        <Input class="form-control" type="search" placeholder="Search" aria-label="Search" @value={{this.text_input}} />
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit" {{on 'click' this.search}}>Search</button>
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit" {{on 'click' this.clean}}>Clean</button>
    </div>
</nav>

{{#if this.search_flag}}

<div class='card-columns'>
    {{#each this.array_results as |item|}}
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src={{item.thumbnail}} width="90" height="90">
        <div class="card-body">
            <h5 class="card-title">{{item.title}}</h5>
            <p class="card-text">${{item.price}}</p>
            <button class="btn btn-primary" {{action "access_item" item.id on="click"}}>Go somewhere</button>
        </div>
    </div>
    {{/each}}
</div>
