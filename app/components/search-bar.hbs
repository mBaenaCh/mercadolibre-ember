<nav class="navbar navbar-light bg-light">

    <div class="input-group">
        <Input type="text" class="form-control" placeholder="Buscar entre muchos productos" @value={{this.text_input}}/>
        <div class="input-group-append" id="button-addon4">
            <button id="search-button" class="btn btn-outline-secondary" type="button" {{on 'click' this.search}}>Search</button>
            <button id="clean-button" class="btn btn-outline-secondary" type="button" {{on 'click' this.clean}}>Clean</button>
        </div>
    </div>

</nav>

{{#if this.search_flag}}
<div class='card-columns'>
    {{#each this.array_results as |item|}}
    <div class="card shadow p-3 mb-5 bg-white rounded" style="width: 18rem;">
        <img class="image" src={{item.thumbnail}}>
        <div class="card-body">
            <h5 class="card-title">{{item.title}}</h5>
            <p class="card-text">${{item.price}}</p>
            <button name="ver_mas" class="btn btn-primary" {{action "access_item" item.id on="click"}}>Ver mas</button>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}

{{#if this.item_detail}}
<div class="container-fluid">
    <div class="card-body">
        <h5 class="card-title">{{this.item_title}}</h5>
        <p class="card-text">${{this.item_price}}</p>
    </div>
    <div class="card mb-3">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src={{this.item_img_url_active.url}} width="400" height="400"
                        alt="First slide">
                </div>
                {{#each this.item_imgs_urls as |item|}}
                <div class="carousel-item">
                    <img class="d-block w-100" src={{item.url}} width="400" height="400" alt="Second slide">
                </div>
                {{/each}}
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
{{/if}}